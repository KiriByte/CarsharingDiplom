@model IEnumerable<CarsharingProject.Models.RentCarsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Cars in park</h1>


<table class="table">
    <thead>
    <tr>
        <th>
            Vin
        </th>
        <th>
            Number car
        </th>
        <th>
            Is rent now
        </th>
        <th>
            Available for users
        </th>
        <th>
            Price per km
        </th>
        <th>
            Price per minute
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberCar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRentNow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailableForUsers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerKM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerMinute)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>