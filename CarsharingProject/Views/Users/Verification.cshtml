@model UserModel?

@{
    Layout = "_Layout";
}

<h2>@Model.UserName</h2>

<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm("Verify", "Users", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)
                <input type="submit" value="Verify" />
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @{
                @if (!string.IsNullOrEmpty(@Model.PassportPhotoPath))
                {
                    <h1>Passport</h1>
                    <img src=@Model.PassportPhotoPath class="img-fluid" alt="Passport Photo">
                }
                else
                {
                    <h1>Passport photo not uploaded</h1>
                }
            }

        </div>
        <div class="col-md-6">
            @{
                @if (!string.IsNullOrEmpty(@Model.DriverLicensePhotoPath))
                {
                    <h1>Driver's license</h1>
                    <img src=@Model.DriverLicensePhotoPath class="img-fluid" alt="Drive License Photo">
                }
                else
                {
                    <h1>Photo of driver's license not uploaded</h1>
                }
            }
        </div>
    </div>
</div>