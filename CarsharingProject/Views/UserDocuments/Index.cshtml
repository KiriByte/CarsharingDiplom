<div class="container">
    <div class="row">
        <div class="col-md-6">
            @{
                string passportPath = ViewData["passportPath"] as string;
                @if (!string.IsNullOrEmpty(passportPath))
                {
                    <h1>Passport photo</h1>
                    <img src=@passportPath class="img-fluid" alt="Passport Photo">
                }
                else
                {
                    <h1>No uploaded passport photos</h1>
                }
            }
            <br />
            <form asp-controller="UserDocuments" asp-action="UploadPassport" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Select file:</label>
                    <input type="file" name="file" id="file" class="form-control-file">
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
        <div class="col-md-6">
            @{
                string licensePath = ViewData["licensePath"] as string;
                @if (!string.IsNullOrEmpty(licensePath))
                {
                    <h1>Photo of driver's license</h1>
                    <img src=@licensePath class="img-fluid" alt="Drive License Photo">
                }
                else
                {
                    <h1>No driver's license photo uploaded</h1>
                }
            }
            <form asp-controller="UserDocuments" asp-action="UploadLicense" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Select File:</label>
                    <input type="file" name="file" id="file" class="form-control-file">
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
    </div>
</div>


